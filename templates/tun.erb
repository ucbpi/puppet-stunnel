# This file managed by Puppet

setuid = root
setgid = root
pid = <%= @pid %>

debug = <%= @debug %>

output = <%= @output_r %>

<% if @options != '' -%>
options = <%= @options %>
<% end -%>

<% if @global_opts.is_a? Hash and @global_opts.keys.size > 0 -%>

; additional global options
  <%- @global_opts.sort.map do |option_name,option_value| -%>
<%= option_name %> = <%= option_value %>
  <%- end -%>
<%- end -%>

[<%= @name %>]
<% if @accept -%>
  accept=<%= @accept %>
<% end -%>
<%- if @connect.is_a? Array -%>
  <%- @connect.each do |c| -%>
  connect=<%= c %>
  <%- end -%>
<%- else -%>
  connect=<%= @connect %>
<%- end -%>
<%- if @connect.is_a? Array -%>
  failover=<%= @failover %>
<%- end -%>
<% if @client -%>
  client=yes
<% else -%>
  client=no
<% end -%>
TIMEOUTidle = <%= @timeoutidle %> 
<% if @service_opts.is_a? Hash and @service_opts.keys.size > 0 -%>
  <%- if not @service_opts.has_key?('cert') -%>
  cert = <%= @cert_real %>
  <%- end -%>

  ; additional service options
  <%- @service_opts.sort.map do |option_name,option_value| -%>
  <%= option_name %> = <%= option_value %>
  <%- end -%>
<%- end -%>
